{
	"name": "going-blast-contracts",
	"version": "1.0.0",
	"description": "You know what it is",
	"scripts": {
		"compile": "hardhat compile",
		"test": "hardhat test",
		"coverage": "hardhat coverage",
		"deploy": "hardhat deploy",
		"node": "hardhat node",
		"sol:format:check": "prettier --check --plugin=prettier-plugin-solidity 'contracts/**/*.sol'",
		"sol:format:write": "prettier --write --plugin=prettier-plugin-solidity 'contracts/**/*.sol'",
		"solhint": "solhint -f table 'contracts/**/*.sol'",
		"format:check": "prettier --check .",
		"format:write": "prettier --write .",
		"lint:check": "eslint .",
		"lint:fix": "eslint --fix .",
		"forge:coverage": "forge coverage --report lcov && genhtml lcov.info --branch-coverage --output-dir coverage",
		"env:anvil": "dotenv -e .env.anvil --",
		"env:blast:testnet": "dotenv -e .env.blast.testnet --",
		"deploy:root": "forge script contracts/script/GoingBlast.s.sol:GBDeploy --rpc-url $RPC_URL --legacy --with-gas-price $GAS_PRICE -vv",
		"deploy:anvil": "yarn env:anvil yarn deploy:root",
		"deploy:blast:testnet": "yarn env:blast:testnet yarn deploy:root",
		"initializeAuctioneer:root": "forge script contracts/script/GoingBlast.s.sol:GBInitializeAuctioneer --rpc-url $RPC_URL --legacy --with-gas-price $GAS_PRICE -vv",
		"initializeAuctioneer:anvil": "yarn env:anvil yarn initializeAuctioneer:root",
		"initializeAuctioneer:blast:testnet": "yarn env:blast:testnet yarn initializeAuctioneer:root",
		"syncConfigValues:root": "forge script contracts/script/GoingBlast.s.sol:GBSyncConfigValues --rpc-url $RPC_URL --legacy --with-gas-price $GAS_PRICE -vv",
		"syncConfigValues:anvil": "yarn env:anvil syncConfigValues:root",
		"syncConfigValues:blast:testnet": "yarn env:blast:testnet syncConfigValues:root",
		"setTreasuryFromMnemonic:root": "forge script contracts/script/GoingBlast.s.sol:GBSetTreasuryFromMnemonic --rpc-url $RPC_URL --legacy --with-gas-price $GAS_PRICE -vv",
		"setTreasuryFromMnemonic:anvil": "yarn env:anvil setTreasuryFromMnemonic:root",
		"setTreasuryFromMnemonic:blast:testnet": "yarn env:blast:testnet setTreasuryFromMnemonic:root"
	},
	"author": "Architect <halftonedev@gmail.com>",
	"license": "MIT",
	"devDependencies": {
		"@nomicfoundation/hardhat-chai-matchers": "^2.0.6",
		"@nomicfoundation/hardhat-ethers": "^3.0.4",
		"@nomicfoundation/hardhat-foundry": "^1.1.1",
		"@nomicfoundation/hardhat-ignition": "^0.14.0",
		"@nomicfoundation/hardhat-ignition-ethers": "^0.14.0",
		"@nomicfoundation/hardhat-network-helpers": "^1.0.10",
		"@nomicfoundation/hardhat-toolbox": "^4.0.0",
		"@nomicfoundation/hardhat-verify": "^2.0.4",
		"@nomicfoundation/ignition-core": "^0.14.0",
		"@nomiclabs/hardhat-solhint": "^3.0.1",
		"@openzeppelin/contracts": "5.0.2",
		"@openzeppelin/test-helpers": "^0.5.16",
		"@typechain/ethers-v6": "^0.5.1",
		"@typechain/hardhat": "^9.1.0",
		"@types/chai": "^4.3.12",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20.11.20",
		"@typescript-eslint/eslint-plugin": "^6.10.0",
		"@typescript-eslint/parser": "^6.10.0",
		"bn.js": "^5.2.1",
		"eslint": "^8.53.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.1",
		"ethers": "^6.8.1",
		"hardhat": "^2.20.1",
		"hardhat-deploy": "^0.12.0",
		"hardhat-gas-reporter": "^1.0.10",
		"prettier": "^3.0.3",
		"prettier-plugin-solidity": "^1.2.0",
		"solhint": "^4.0.0",
		"solidity-coverage": "^0.8.5",
		"ts-node": "^10.9.2",
		"typechain": "^8.3.2",
		"typescript": "^5.2.2"
	},
	"dependencies": {
		"chai": "4.3.7"
	}
}
