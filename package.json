{
	"name": "going-blast-contracts",
	"version": "1.0.0",
	"description": "You know what it is",
	"scripts": {
		"====== ENV ======": "",
		"env:anvil": "dotenv -e .env.anvil --",
		"env:blast:testnet": "dotenv -e .env.blast.testnet --",
		"====== ANVIL ======": "",
		"anvil:fork": "anvil --fork-url $RPC_URL",
		"anvil:fork:blast:testnet": "yarn env:blast:testnet yarn anvil:fork",
		"====== MISC ======": "",
		"forge:coverage": "forge coverage --report lcov && genhtml lcov.info --branch-coverage --output-dir coverage",
		"====== ABI ======": "",
		"generate:abi:Auctioneer": "forge inspect src/Auctioneer.sol:Auctioneer abi > abi/Auctioneer.json",
		"generate:abi:AuctioneerUser": "forge inspect src/AuctioneerUser.sol:AuctioneerUser abi > abi/AuctioneerUser.json",
		"generate:abi:AuctioneerEmissions": "forge inspect src/AuctioneerEmissions.sol:AuctioneerEmissions abi > abi/AuctioneerEmissions.json",
		"generate:abi:AuctioneerFarm": "forge inspect src/AuctioneerFarm.sol:AuctioneerFarm abi > abi/AuctioneerFarm.json",
		"generate:abi": "yarn generate:abi:Auctioneer & yarn generate:abi:AuctioneerUser & yarn generate:abi:AuctioneerEmissions & yarn generate:abi:AuctioneerFarm",
		"====== INJECT ======": "",
		"inject:frontend:root": "yarn generate:abi",
		"inject:frontend:deployment": "cp data/$CHAIN_NAME/deployment.json ../going-blast-frontend/src/config/deployments/$CHAIN_NAME.json",
		"inject:frontend:anvil": "yarn env:anvil yarn inject:frontend:deployment",
		"inject:frontend:abi": "yarn generate:abi && cp -R abi ../going-blast-frontend/src/config/deployments",
		"====== SCRIPT ======": "",
		"script:run": "forge script script/GB.s.sol:GBScripts --rpc-url $RPC_URL --legacy --with-gas-price $GAS_PRICE -vvv",
		"script:anvil": "yarn env:anvil yarn script:run",
		"script:anvil:broadcast": "yarn script:anvil --broadcast",
		"script:blast:testnet": "yarn env:blast:testnet yarn script:run",
		"script:blast:testnet:broadcast": "yarn script:blast:testnet --broadcast",
		"====== UTILS ======": "",
		"script:anvil:setup": "yarn script:anvil:broadcast --sig 'fullDeploy()' && yarn script:anvil:broadcast --sig 'treasuryApproveAuctioneerAuction()' && yarn script:anvil:broadcast --sig 'createAuctions()' && yarn inject:frontend:abi && yarn inject:frontend:anvil",
		"script:anvil:bid": "yarn script:anvil:broadcast --sig 'ANVIL_bid(uint32, uint256, uint8, string)'",
		"anvil:fund:arch": "yarn env:anvil cast send --value 1000000000000000000 --private-key 0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80 0x3a7679E3662bC7c2EB2B1E71FA221dA430c6f64B",
		"script:anvil:auto-bid": "npx tsx ts-script/auto-bid.ts",
		"anvil:start": "anvil --block-time 1"
	},
	"author": "Architect <halftonedev@gmail.com>",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^20.11.20",
		"@typescript-eslint/eslint-plugin": "^6.10.0",
		"@typescript-eslint/parser": "^6.10.0",
		"eslint": "^8.53.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.1",
		"prettier": "^3.0.3",
		"prettier-plugin-solidity": "^1.2.0",
		"solhint": "^4.0.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.2.2"
	},
	"dependencies": {
		"@ngneat/falso": "^7.2.0",
		"@typechain/ethers-v6": "^0.5.1",
		"dev": "^0.1.3",
		"global": "^4.4.0",
		"tsx": "^4.7.1",
		"typechain": "^8.3.2",
		"viem": "^2.9.4"
	}
}
